<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/doctor_pic"
            android:src="@mipmap/doctor_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Toolbar"
            android:background="?selectableItemBackground"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_t1"
            android:text="Doctor Name"
            android:textSize="19sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/text_view_background"
            android:layout_below="@+id/doctor_pic"
            android:layout_marginLeft="5dip"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_name"
            android:textColor="@color/colorRed"
            android:text="Dr"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@+id/name_t1"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speciality_t1"
            android:text="Speciality And Designation"
            android:textSize="19sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/text_view_background"
            android:layout_below="@+id/doctor_name"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/speciality"
            android:textColor="@color/colorRed"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@+id/speciality_t1"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adress_t1"
            android:text="Adress"
            android:textSize="19sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/text_view_background"
            android:layout_below="@+id/speciality"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adress"
            android:textColor="@color/colorRed"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@+id/adress_t1"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mail_t1"
            android:text="Email Adress"
            android:textSize="19sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/text_view_background"
            android:layout_below="@+id/adress"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:textColor="@color/colorRed"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_below="@+id/mail_t1"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker"
            android:background="@drawable/button_background_rectangle"
            android:text="Appointment Date"
            android:layout_below="@+id/email"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_t1"
            android:text="Contacts"
            android:textSize="19sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/text_view_background"
            android:layout_below="@+id/datePicker"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/ll"
            android:layout_below="@id/contact_t1"
            android:paddingRight="5dip">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.75"
                android:id="@+id/contact"
                android:textColor="@color/colorRed"
                android:text="01"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/edit_text_background"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="0.25"
                android:id="@+id/add_contact"
                android:src="@mipmap/add_button"
                />
        </LinearLayout>
        <Spinner
            style="?android:attr/spinnerDropDownItemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contactList"
            android:layout_below="@+id/ll"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll1"
            android:weightSum="3"
            android:layout_below="@+id/contactList">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/call_button"
                android:background="?selectableItemBackground"
                android:src="@mipmap/icon_call_button"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/mail_button"
                android:background="?selectableItemBackground"
                android:src="@drawable/email_icon"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>